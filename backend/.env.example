# Database Configuration
# Para SQLite local (desarrollo):
# DATABASE_URL=sqlite:///./biblioreservas.db

# Para PostgreSQL en AWS RDS:
DATABASE_URL=postgresql://usuario:password@tu-endpoint.rds.amazonaws.com:5432/biblioreservas

# Para MySQL en AWS RDS:
# DATABASE_URL=mysql+pymysql://usuario:password@tu-endpoint.rds.amazonaws.com:3306/biblioreservas

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
# Para RabbitMQ en AWS/CloudAMQP:
# RABBITMQ_URL=amqps://usuario:password@tu-rabbitmq.cloudamqp.com/vhost

# SMTP Email Configuration (Gmail)
# Instrucciones:
# 1. Ve a https://myaccount.google.com/security
# 2. Activa "Verificación en 2 pasos"
# 3. Ve a https://myaccount.google.com/apppasswords
# 4. Genera una "Contraseña de aplicación" para "Correo"
# 5. Usa esa contraseña aquí (NO tu contraseña normal de Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-aplicacion-de-16-caracteres
SMTP_FROM_EMAIL=tu-email@gmail.com
SMTP_FROM_NAME=BiblioReservas

# API Configuration
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Queue Configuration
EMAIL_QUEUE_ENABLED=true
EMAIL_QUEUE_NAME=email_notifications
